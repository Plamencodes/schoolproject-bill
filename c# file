            Console.WriteLine("                           ИН по ЗДДС: " + inp);
            Console.WriteLine("                         Оператор "+ opr +"/ Пламен Петров                        ");
            Console.WriteLine();
            Console.WriteLine();
        }
        static void Footer()
        {
            Console.WriteLine("                                ФИКСАЛЕН БОН                               ");
