        static void Header()
        {
            Random rnd = new Random();
            int eik = rnd.Next(100000000, 999999999);
            int inp = rnd.Next(100000000, 999999999);
            int opr = rnd.Next(1, 10);
            Console.WriteLine("===========================================================================");
            Console.WriteLine("                           ПРОДАВАЧ (ПЛАМЕН ЕООД)                          ");
            Console.WriteLine("                    гр. Велико Търново, ул. Гурково №10                    ");
