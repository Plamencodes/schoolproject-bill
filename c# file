            Console.Write("Въведете Продукт (1 = Банан; 2 = Ябълка; 3 = Портокал; 4 = Авокадо; 5 = Домат): ");
            int product = int.Parse(Console.ReadLine());
            if (product == 1)
            {
                Console.Write("Въведете цена на продукта (лв): ");
                double price = double.Parse(Console.ReadLine());
                Console.Write("Въведете количество на продукта: ");
                int quantity = int.Parse(Console.ReadLine());
                Console.Write("Обща сума: " + price * quantity + "лв | Искате ли да продължите? (1 = да; 2= не): ");
                int last = int.Parse(Console.ReadLine());
                if (last == 1)
                Console.Write("Пари дадеди в брой: ");
                double number = double.Parse(Console.ReadLine());
                double sum = price * quantity;
                double substract = sum - number;
                double substract2 = substract * -1;
                {
                    Header();
                    Console.WriteLine("                          Банан х " + quantity + "            " + price * quantity + "лв");
                    Console.WriteLine();
                    Console.WriteLine();
                    Console.WriteLine("                          ОБЩА СУМА" + "            " + price * quantity + "лв");
                    Console.WriteLine("                          В Брой" + "               " + number + "лв");
                    Console.WriteLine("                          Ресто" + "                " + substract2 + "лв");
                    Console.WriteLine();
                    Console.WriteLine();
                    Footer();
                }
                if (last == 2)
                {
                    return;
                }
                else
                {
                    return;
                }
            }
